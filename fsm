digraph "State Machine" {
	graph [color=black directed=true fillcolor=white label="State Machine" rankdir=LR "strict"=false style=solid]
	node [color=black fillcolor=white peripheries=1 shape=rectangle style="rounded, filled"]
	edge [color=black]
	user [label="user\l" color=red fillcolor=darksalmon peripheries=2]
	init [label="init\l"]
	chat [label="chat\l"]
	conversation [label="conversation\l"]
	edit_text [label="edit_text\l"]
	get_writing [label="get_writing\l"]
	edit_code [label="edit_code\l"]
	get_code [label="get_code\l"]
	get_inst [label="get_inst\l"]
	generate_image [label="generate_image\l"]
	create_image [label="create_image\l"]
	user -> init [label="advance [is_going_to_init] | go_back"]
	init -> chat [label="advance [is_going_to_chat]"]
	init -> edit_text [label="advance [is_going_to_edit_text]"]
	init -> edit_code [label="advance [is_going_to_edit_code]"]
	init -> generate_image [label="advance [is_going_to_generate_image]"]
	init -> init [label=go_back]
	conversation -> conversation [label="advance [is_going_in_conversation]"]
	conversation -> init [label=go_back]
	chat -> conversation [label="advance [is_going_in_conversation]"]
	chat -> init [label=go_back]
	edit_text -> get_writing [label="advance [is_going_to_get_writing]"]
	edit_text -> init [label=go_back]
	get_writing -> get_writing [label="advance [is_going_to_get_writing]"]
	get_writing -> init [label=go_back]
	edit_code -> get_code [label="advance [is_going_to_get_code]"]
	edit_code -> init [label=go_back]
	get_code -> get_inst [label="advance [is_going_to_get_inst]"]
	get_code -> init [label=go_back]
	get_inst -> get_code [label="advance [is_going_to_get_code]"]
	get_inst -> init [label=go_back]
	generate_image -> create_image [label="advance [is_going_to_create_image]"]
	generate_image -> init [label=go_back]
	create_image -> generate_image [label="advance [is_going_to_generate_image]"]
	create_image -> init [label=go_back]
}
